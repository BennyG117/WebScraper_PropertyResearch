@model List<SiteCheck> 

    <div class="container d-flex">
        <div>
            <h1>Site Check List</h1>
        </div>
        <div>
            <ul class="container">
                @foreach (SiteCheck siteCheck in Model)
                {
                    <li class="list-inline mb-3"> 
                        <div>
                            <a class="text-dark" asp-controller="SiteCheck" asp-action="Details" asp-route-id="@siteCheck.SiteCheckId">@siteCheck.SiteCheckName</a>
                            - @siteCheck.CreatedAt.Date
                                <div class="d-flex">
                                    @if(siteCheck.UserId == Context.Session.GetInt32("UUID"))
                                        {
                                            <p>
                                                <a  asp-controller="SiteCheck" asp-action="Edit" asp-route-id="@siteCheck.SiteCheckId" class="btn btn-outline-success mt-2">Edit</a>
                                            </p>
                                            <p>
                                                <form asp-controller="SiteCheck" asp-action="Delete" asp-route-id="@siteCheck.SiteCheckId" method="post">
                                                    <button class="btn btn-outline-danger mt-2">Delete</button>
                                                </form>
                                            </p>
                                        }
                                </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>